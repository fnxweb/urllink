{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "3.1.1",
    "description": "__MSG_extensionDescription__",
    "author": "Neil Bird",
    "homepage_url": "https://addons.mozilla.org/en-GB/firefox/addon/url-link/",
    "default_locale": "en_US",

    "applications": {
        "gecko": {
            "id": "{139a120b-c2ea-41d2-bf70-542d9f063dfd}",
            "strict_min_version": "56.0"
        }
    },

    "icons": {
        "48": "icons/urllink-48.png",
        "96": "icons/urllink-96.png"
    },

    "background": {
        "scripts": [ "background.js" ]
    },

    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "exclude_globs": [ "about:*" ],
            "js": [ "content.js" ],
            "run_at": "document_end"
        }
    ],

    "options_ui": {
        "browser_style": true,
        "page": "preferences.html",
        "open_in_tab": true
    },

    "permissions": [
        "clipboardWrite",
        "menus",
        "storage",
        "tabs"
        ]
}
